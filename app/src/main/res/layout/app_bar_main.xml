<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="#2471A3"
    android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#2471A3">

            <ImageView

                android:id="@+id/hamburgerBtn"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/hamburber_menu"
                android:backgroundTint="@color/colorWhite"
                />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:background="@drawable/insidelogo"
                android:layout_marginStart="@dimen/_25sdp"
                />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="200dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:text="@string/header_eng_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#25A2F2"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/te"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:text="চাকরির সবকিছু"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_marginStart="8dp"
                    android:padding="3dp"
                    android:id="@+id/likesLayout"
                    android:background="@drawable/rounded_square"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/likes"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_marginStart="8dp"
                    android:padding="5.5dp"
                    android:visibility="gone"
                    android:id="@+id/sizeLayout"
                    android:background="@drawable/rounded_square"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/text_size"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:background="@drawable/rounded_square"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bookmark2"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:background="@drawable/rounded_square"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share"

                        />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

</com.google.android.material.appbar.AppBarLayout>