<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_background"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="44dp"
        android:id="@+id/image_on_header"
        android:layout_alignParentTop="true"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/man" />

    <TextView
        android:id="@+id/name_on_header"
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Test User"
        android:layout_toEndOf="@+id/image_on_header"
        />
    <TextView
        android:id="@+id/ph_on_header"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/image_on_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="(01516185792)"
        android:layout_below="@+id/name_on_header"
        />

    <EditText
        android:id="@+id/search_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_26sdp"
        android:layout_below="@+id/image_on_header"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/grey_back_radius"
        android:drawableEnd="@drawable/ic_search_black_24dp"
        android:elevation="2dp"
        android:focusable="true"
        android:imeOptions="actionSearch"
        android:inputType="textImeMultiLine"
        android:maxLines="1"
        android:minLines="1"
        android:ems="12"
        android:paddingStart="@dimen/_5sdp"
        android:text="আমি sdfaf asf"
        android:textColor="@color/colorBlack" />

</RelativeLayout>